<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui"
  xmlns:b="urn:import:org.gwtbootstrap3.client.ui" xmlns:b.html="urn:import:org.gwtbootstrap3.client.ui.html">


  <ui:with field="tokens" type="br.com.pcsist.wta.usuario.client.place.Tokens" />

  <ui:style>
  .buttons button {
    margin: 0.5em;
  }
  
  .labels span {
    margin-right: 5px;
  }
  </ui:style>

  <g:ScrollPanel>
    <b:Container>
      <b:Navbar position="FIXED_TOP">
        <b:Container>
          <b:NavbarHeader>
            <b:NavbarBrand>Brand</b:NavbarBrand>
            <b:NavbarCollapseButton dataTarget="#navbar-collapse" />
          </b:NavbarHeader>
          <b:NavbarCollapse b:id="navbar-collapse">
            <b:NavbarNav>
              <b:AnchorListItem active="true">Produto</b:AnchorListItem>
              <b:AnchorListItem>Vendas</b:AnchorListItem>
              <b:AnchorListItem>Compras</b:AnchorListItem>

              <b:ListDropDown>
                <b:AnchorButton dataToggle="DROPDOWN">Usuários</b:AnchorButton>
                <b:DropDownMenu>
                  <b:AnchorListItem targetHistoryToken="{tokens.getCadastro}">Cadastrar</b:AnchorListItem>
                  <b:AnchorListItem>Movimentações</b:AnchorListItem>
                </b:DropDownMenu>
              </b:ListDropDown>
              <b:ListDropDown>
                <b:AnchorButton dataToggle="DROPDOWN">Estoque</b:AnchorButton>
                <b:DropDownMenu>
                  <b:AnchorListItem>Depósitos</b:AnchorListItem>
                  <b:AnchorListItem>Movimentações</b:AnchorListItem>
                </b:DropDownMenu>
              </b:ListDropDown>
            </b:NavbarNav>

            <b:NavbarForm pull="LEFT">
              <b:TextBox placeholder="Busca" addStyleNames="col-lg-8" />
            </b:NavbarForm>

            <b:NavbarText pull="RIGHT">
              <b.html:Span>
                Logado como:
                <b:NavbarLink>Admin</b:NavbarLink>
              </b.html:Span>
            </b:NavbarText>
          </b:NavbarCollapse>
        </b:Container>
      </b:Navbar>
      <g:SimplePanel ui:field="main" />
    </b:Container>
  </g:ScrollPanel>

</ui:UiBinder>